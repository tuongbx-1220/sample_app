<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
  <%= link_to t("sample_app"), '/', id: "logo" %>
  <nav>
    <ul class="nav navbar-nav navbar-right">
      <li><%= link_to t("static_pages.home.title"), static_pages_home_path %></li>
      <li><%= link_to t("static_pages.help.title"), static_pages_help_path %></li>
      <% if logged_in? %>
        <li><%= link_to t("all_user"), users_path %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t "account" %><b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t("profile"), current_user %></li>
            <li><%= link_to t("settings"), edit_user_path(current_user) %></li>
            <li class="divider"></li>
            <li>
              <%= link_to t("log_out"), logout_path, method: :delete %>
            </li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to t("login"), login_path %></li>
        <li><%= link_to t("sign_up"), sign_up_path %></li>
      <% end %>
      <li><%= link_to t("vi"), locale: :vi %></li>
      <li><%= link_to t("en"), locale: :en %></li>
    </ul>
  </nav>
  </div>
</header>
