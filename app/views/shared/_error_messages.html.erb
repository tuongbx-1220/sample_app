<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      <%= sanitize t("error.error_valid",
        error: pluralize(object.errors.count, t("error.error"))) %>
    </div>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
